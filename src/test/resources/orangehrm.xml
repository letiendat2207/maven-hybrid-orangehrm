<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="OrangeHRM - UI Automation Test" verbose="1" >

    <parameter name="appUrl" value="https://opensource-demo.orangehrmlive.com/web/index.php/auth/login"/>

    <test name="Run on FIREFOX browser" >
        <parameter name="browser" value="Firefox" />
        <classes>
            <class name="orangehrm.Login_03_Multiple_Browser" />
        </classes>
    </test>

    <test name="Run on CHROME browser" >
        <parameter name="browser" value="Chrome" />
        <classes>
            <class name="orangehrm.Login_03_Multiple_Browser" />
        </classes>
    </test>

    <test name="Run on EDGE browser" >
        <parameter name="browser" value="Edge" />
        <classes>
            <class name="orangehrm.Login_03_Multiple_Browser" />
        </classes>
    </test>

</suite>